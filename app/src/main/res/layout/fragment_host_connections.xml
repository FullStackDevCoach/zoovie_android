<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Hosts.Fragment.HostConnectionsFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_host_connects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50 Connects"
        android:textSize="@dimen/_16ssp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/et_text_hint_color"
        android:layout_margin="@dimen/_12sdp"
        android:layout_alignParentStart="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_host_connect_view_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="@string/view_all"
        android:textColor="@color/et_text_hint_color"
        android:textSize="@dimen/_14ssp"
        android:padding="@dimen/_12sdp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_connect_profile"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tv_host_connects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_profile_picture_view" />





</RelativeLayout>