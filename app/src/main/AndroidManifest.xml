<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.zoovienew">
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZoovieNew">

        <activity
            android:name=".Customer.Activity.SelectLocationActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".VideoViewActivity"/>

        <activity
            android:name=".Hosts.Activity.HostFragViewerActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".Hosts.Activity.PayoutActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Hosts.Activity.HostOTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Hosts.Activity.HostHomePageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Hosts.Activity.HostSignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Hosts.Activity.HostSignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Customer.Activity.FragViewerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Customer.Activity.OTPActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Customer.Activity.HomePageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Customer.Activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Customer.Activity.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>